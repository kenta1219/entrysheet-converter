# アプリケーション設定
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# サーバー設定
HOST=0.0.0.0
PORT=8000

# ファイル処理設定
MAX_FILE_SIZE=10485760

# シート名設定
SOURCE_SHEET_NAME=加盟店申込書_施設名
TARGET_SHEET_NAME=店子申請一覧

# 機能フラグ設定 (v3.0)
ENABLE_MULTI_FILE_PROCESSING=true
ENABLE_BATCH_PROCESSING=true
MAX_MULTI_FILES=20
MAX_BATCH_TEMPLATES=10
MAX_MULTI_FILE_ROWS=1000

# 本番環境用設定（必要に応じて設定）
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# HOST=0.0.0.0
# PORT=80